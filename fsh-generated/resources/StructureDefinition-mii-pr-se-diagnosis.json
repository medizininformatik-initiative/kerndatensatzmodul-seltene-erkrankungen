  "url": "https://www.medizininformatik-initiative.de/fhir/ext/modul-seltene-erkrankungen/StructureDefinition/mii-pr-se-diagnosis",
  "version": "2026.0.0-ballot",
  "name": "MIIProfileSEDiagnosis",
  "title": "MII Profile SE Diagnosis",
  "status": "draft",
  "publisher": "Medizininformatik Initiative",
  "contact": [
    {
      "telecom": [
        {
          "system": "url",
